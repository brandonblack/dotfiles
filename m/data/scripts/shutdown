# get the mongodb process id
pid=`lunchy status mongodb | awk '{print $1}'`

# stop the mongod process
if [ -n $pid ]
then
  kill -2 $pid
fi

# remove lock file if present
if [ -f /data/db/current/default/mongod.lock ];
then
  find . -type f -name '/data/db/mongod.lock' -ls -delete > /dev/null
fi

# remove symlink if it already exists
if [ -d /data/db/current ];
then
  rm /data/db/current
fi
