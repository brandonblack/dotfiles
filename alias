# General
alias home='cd ~' # the tilda is too hard to reach
alias proj='cd /Users/brandonmblack/Google\ Drive/Projects'
alias l='ls -lah'
alias h='history' # shortcut for history
alias c='clear' # shortcut to clear your terminal
alias ..='cd ..' # move up 1 dir
alias ...='cd ../..' # move up 2 dirs
alias grep='GREP_COLOR="1;37;41" LANG=C grep --color=auto'

# Rails
alias r='rails'
alias rs='rails s'
alias rg='rails g'
alias rc='rails c'
alias rdbc='rake db:create:all'
alias rdbm='rake db:migrate'
alias rdbs='rake db:seed'
alias rsp='rs -e production'
alias rst='rs -e test'

# Bundler
alias bi="bundle install --without production"

# Heroku
alias hk='heroku'

# Powder
